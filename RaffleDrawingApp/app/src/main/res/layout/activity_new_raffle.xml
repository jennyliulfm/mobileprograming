<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".NewRaffle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:text="Raffle Title"
                android:layout_weight="0.4">
            </TextView>

            <EditText
                android:id="@+id/newraffleTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="center">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:text="Raffle Description"
                android:layout_weight="0.40" >
            </TextView>

            <EditText
                android:id="@+id/newraffleDescription"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.60"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="center">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"

                android:text="Raffle Ticket Number"
                android:layout_weight="0.40"
                >
            </TextView>

            <EditText
                android:id="@+id/newraffleTicketNumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.60"
                android:inputType="number"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="center">
            </EditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:text="Raffle Type"
                android:layout_weight="1">
            </TextView>

            <RadioGroup
                android:id="@+id/newraffleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/newraffleType1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Margin"
                    android:textSize="20dp">
                </RadioButton>

                <RadioButton
                    android:id="@+id/newraffleType2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="20dp"
                    android:text="Normal">

                </RadioButton>
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.20">

        <Button
            android:id="@+id/newraffleSave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20dp"

            android:text="Save As Draft"
            android:layout_weight="1">
        </Button>

        <Button
            android:id="@+id/newraffleConfirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Publish online"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_weight="1">
        </Button>

    </LinearLayout>

</LinearLayout>